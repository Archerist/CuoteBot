{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": false,
		"baseUrl": "./src",
		"moduleResolution": "node",
		"alwaysStrict": true,
		"allowJs": false,
		"outDir": "./build/",
		"sourceMap": true
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"./build/**/*.ts"
	],
	"display": "Recommended"
}