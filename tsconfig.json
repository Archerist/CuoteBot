{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks": false,
      "baseUrl": ".",
      "moduleResolution": "node",
      "alwaysStrict": true,
      "allowJs": true,
      "outDir": "./build/"
    },
    "include": [
        "**/*.ts"
    ],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
  }